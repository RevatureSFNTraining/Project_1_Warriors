<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Property__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Security_Deposit__c</field>
        <field>Monthly_Rent_Due__c</field>
        <field>Approval_Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>georgemariscal@properly.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Assign to Lead Property Manager</label>
        <name>Assign_to_Lead_Property_Manager</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>Active__c  = False  &amp;&amp;  NOT( ISBLANK( Start_Date__c ) ) &amp;&amp;  NOT( ISBLANK( End_Date__c ) ) &amp;&amp;  NOT( ISBLANK( Monthly_Rent_Due__c  ) )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Follow_Up</name>
            <type>Task</type>
        </action>
    </initialSubmissionActions>
    <label>Lease Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Approval_to_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
